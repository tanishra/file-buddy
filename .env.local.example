# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
DEEPGRAM_API_KEY=your-deepgram-key-here
LIVEKIT_URL=wss://your-livekit-url
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
MEM0_API_KEY=your-mem0-key-here

# Model Configuration
OPENAI_MODEL=gpt-4
DEEPGRAM_STT=nova-2
DEEPGRAM_TTS=aura-asteria-en

# Application Settings
APP_NAME=FileBuddy
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=False

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_FILE_OPERATIONS_PER_MINUTE=100

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF=2.0

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Memory Configuration
MEMORY_RETENTION_DAYS=90
MEMORY_CACHE_SIZE=1000

# File Operations
MAX_FILE_SIZE_MB=100
MAX_BATCH_SIZE=1000
ENABLE_UNDO=True
MAX_UNDO_HISTORY=50

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/filebuddy.log

# Health Check
HEALTH_CHECK_INTERVAL=60

# Timeouts (seconds)
API_TIMEOUT=30
FILE_OPERATION_TIMEOUT=300

# Security Settings (NEW)
ENABLE_SECURITY_VALIDATION=True
ENABLE_RISK_ASSESSMENT=True
REQUIRE_CONFIRMATION_HIGH_RISK=True

# Backup Settings (NEW)
ENABLE_AUTO_BACKUP=True
BACKUP_RETENTION_DAYS=30
MAX_BACKUP_SIZE_GB=5

# Audit Settings (NEW)
ENABLE_AUDIT_LOG=True
AUDIT_RETENTION_DAYS=90
AUDIT_INCLUDE_READ_OPS=False

# Security Limits (NEW)
MAX_PATH_DEPTH=10
MAX_BATCH_TOTAL_SIZE_MB=1024

# Confirmation Settings (NEW)
CONFIRMATION_TIMEOUT=300
REQUIRE_PIN_FOR_CRITICAL=False
# CRITICAL_OPERATION_PIN=1234  # Uncomment and set PIN if using PIN protection

# ==================== Notes ====================
# - Keep this file secure and never commit to git
# - Backup retention: Set BACKUP_RETENTION_DAYS=7 for testing, 30 for production
# - Audit logs: Set AUDIT_INCLUDE_READ_OPS=True only if you need detailed logging
# - Security: ENABLE_SECURITY_VALIDATION should always be True in production
# - For development, you can disable security temporarily: ENABLE_SECURITY_VALIDATION=False